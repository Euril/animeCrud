<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
	<h1>Add an Anime to the list</h1>
  <% if (user) {%>
    
    <form action ="/animes" method="POST">
      <div class="form-group">
        <label>
          Title:
          <input type="text" name="mainTitle" required>
        </label>
      </div>
      <div class="form-group">
        <label>
          Image URL:
          <input type="text" name="imageURL" placeholder="Image Address">
        </label>
      </div>
      <div class="form-group">
      <label>
        Studio:
        <input type="text" name="studio" required>
      </label>
      </div>
      <div class="form-group">
      <label>
        Year Aired:
        <input type="number" name="yearAired" pattern="[1945-2077]{4}" title="Invalid Year" required>
      </label>
      <label>
        Season Aired:
        <select name="seasonAired">
          <option value="Winter" selected>Winter</option>
          <option value="Spring">Spring</option>
          <option value="Summer">Summer</option>
          <option value="Fall">Fall</option>
        </select>
      </label>
      </div>
      <div class="form-group">
      <label>
        <textarea name="description" rows="10" cols="30" placeholder="Write a description of the series" required></textarea>
      </label>
    </div>
      <button type="submit">Add Anime</button>
    </form> 
    <% } %> 


</section>

<%- include('../partials/footer') %>